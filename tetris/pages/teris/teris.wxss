/* pages/teris/teris.wxss */

    #tetris {
        width: 310px;
    
        padding: 5px;
    }
    #canvas {
        width: 200px;
        height: 440px;
        border:1px solid black;
        background-color: #000;
        position: relative;
        color: #fff;
    }
    #canvas h1 {
        margin: 0;
        padding: 0;
        text-align: center;
        font-size: 3px;
        padding-top: 200px;
        }
    .piece {
        border: 1px solid white;
        position: absolute;
        }
    .square {
        position: absolute;
        width: 19px;
        height: 19px;
        border: 1px solid white;
        }
    #next_shape {
        position: relative;
        background-color: #000;
        border: 1px solid white;
        width: 80px;
        height: 80px;
        }
    .settinglabel{
      display:block;
    }
    #info {
        background-color: #000;
        color: #fff;
        float: right;
        width: 80px;
        height: 420px;
        padding: 10px;
      }
      .button{
        width:60px;
        float:left;
      }